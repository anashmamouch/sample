<% if @user.errors.any? %>
<div id="error_explanation">
	<div class="alert alert-danger">
		
		The form contains <strong><%=pluralize(@user.errors.count, "error")%></strong>.
	</div>

	<ul>
		<% @user.errors.full_messages.each do |error_message|%>
			<li><%= error_message%></li>
		<%end%>
	</ul>
</div>
<%end%>